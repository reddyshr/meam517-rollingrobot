# Useage:  make -f SampleMake
# To use executable MyProb, add ../lib to LD_LIBRARY_PATH
# Warning: paths and compiler options are machine dependent

SHELL         = /bin/sh

LIBDIR        = ../lib
SNOPT_LIBS    =   -lsnopt7

FC            = gfortran
FFLAGS        = -O

MyProb: MyProb.o
	$(FC) $(FFLAGS) $^ -o $@ -L$(LIBDIR) $(SNOPT_LIBS)

MyProb.o: MyProb.f
	$(FC) -c $(FFLAGS) $< -o $@
